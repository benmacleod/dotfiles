{
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "auto-comment-blocks.hashStyleBlocks": ["ruby"],
  "auto-comment-blocks.singleLineBlockOnEnter": true,
  "bustagem.cmd.bundle": "sudo bundle show --paths",
  //"docker.host": "tcp://jordi.local:2375",
  "editor.accessibilitySupport": "off",
  "editor.fontFamily": "MonoLisa,JetBrains Mono,Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 10,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.guides.bracketPairs": "active",
  "editor.inlineSuggest.enabled": true,
  "editor.minimap.enabled": false,
  "editor.rulers": [100, 120],
  "editor.tabSize": 2,
  "eslint.codeActionsOnSave.mode": "problems",
  "files.autoSave": "afterDelay",
  "files.trimTrailingWhitespace": true,
  "github.copilot.enable": {
    "*": true,
    "markdown": true,
    "plaintext": false,
    "yaml": true
  },
  "github.codespaces.defaultExtensions": [
    "castwide.solargraph",
    "dbaeumer.vscode-eslint",
    "eamodio.gitlens",
    "esbenp.prettier-vscode",
    "GitHub.copilot",
    "GitHub.vscode-pull-request-github",
    "gitkraken.gitkraken-authentication",
    "gurgeous.bust-a-gem",
    "misogi.ruby-rubocop"
  ],
  "jest.autoRun": {
    "onSave": "test-src-file",
    "watch": false
  },
  "markdown.preview.breaks": true,
  "prettier.configPath": ".prettierrc.json",
  "remote.containers.defaultExtensions": [
    "castwide.solargraph",
    "cmstead.jsrefactor",
    "connorshea.vscode-ruby-test-adapter",
    "dbaeumer.vscode-eslint",
    "eamodio.gitlens",
    "esbenp.prettier-vscode",
    "GitHub.copilot",
    "GitHub.vscode-pull-request-github",
    "gitkraken.gitkraken-authentication",
    "gurgeous.bust-a-gem",
    "misogi.ruby-rubocop",
    "noku.rails-run-spec-vscode",
    "Orta.vscode-jest",
    "sporto.rails-go-to-spec"
  ],
  "ruby.rubocop.configFilePath": ".rubocop.yml",
  "ruby.rubocop.suppressRubocopWarnings": true,
  "ruby.rubocop.useBundler": true,
  "ruby.specCommand": "DATABASE_URL=postgres://postgres@db:5432/tc_donations_test bin/rspec",
  "rubyTestExplorer.logpanel": true,
  "rubyTestExplorer.rspecCommand": "DATABASE_URL=postgres://postgres@db:5432/tc_donations_test bin/rspec",
  "rubyTestExplorer.testFramework": "rspec",
  "vim.highlightedyank.enable": true,
  "vim.textwidth": 100,
  "vsicons.dontShowNewVersionMessage": true,
  "workbench.iconTheme": "vscode-icons",
  "workbench.startupEditor": "none",
  "workbench.experimental.layoutControl.enabled": true,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.bracketPairColorization.enabled": true,
  "editor.linkedEditing": true,
  "codestream.serverUrl": "https://api.codestream.com",
  "codestream.email": "ben.j.macleod@gmail.com",
  "redhat.telemetry.enabled": true,
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "githubPullRequests.pushBranch": "always",
  "githubPullRequests.pullBranch": "never",
  "task.problemMatchers.neverPrompt": {
    "shell": true
  },
  "workbench.colorTheme": "Darcula Theme from IntelliJ",
  "window.zoomLevel": -1
}
